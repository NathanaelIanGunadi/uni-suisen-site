{
  "name": "uni-suisen-site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "prisma generate && prisma db push && prisma db seed",
    "db:seed": "prisma db seed",
    "db:push": "prisma db push",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:server": "nodemon src/index.ts",
    "dev:mail": "maildev --smtp 1025 --web 1080",
    "dev": "concurrently -k -n SERVER,MAILDEV -c auto \"npm:dev:server\" \"npm:dev:mail\"",
    "clean": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"If (Test-Path .\\node_modules\\.prisma\\client) { Remove-Item -Recurse -Force .\\node_modules\\.prisma\\client }; If (Test-Path .\\node_modules) { Remove-Item -Recurse -Force .\\node_modules }; If (Test-Path .\\dist) { Remove-Item -Recurse -Force .\\dist }\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-list-endpoints": "^7.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-list-endpoints": "^7.1.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^7.0.1",
    "concurrently": "^9.2.1",
    "maildev": "^2.2.1",
    "nodemon": "^3.1.9",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  }
}
